<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="CommonAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="CommonAppTheme.BackgroundWhite">
        <item name="android:background">#77ffffff</item>
    </style>

    <style name="CommonAppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CommonToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="CommonImageButtonBorderless" parent="android:Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:padding">@dimen/standard_screen_padding_vertical</item>
        <item name="android:background">
            @drawable/shape_selectable_item_background_borderless_lt_grey
        </item>
    </style>

    <style name="WithoutActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggleStyle</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textColorSecondary">@color/color_text_secondary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ThemeTransparentDecor" parent="WithoutActionBar">
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppButtonCommonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DrawerArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="CommonAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="CommonAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="NoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>


    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="BackgroundWhite">
        <item name="android:background">@android:color/white</item>
    </style>


</resources>
