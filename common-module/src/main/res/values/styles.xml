<resources>

    <!-- Base application theme. -->
    <style name="CommonAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="CommonAppTheme.BackgroundWhite">
        <item name="android:background">#77ffffff</item>
    </style>

    <style name="CommonAppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="AppButtonCommonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="CommonAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="CommonAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="NoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>


    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>


</resources>
