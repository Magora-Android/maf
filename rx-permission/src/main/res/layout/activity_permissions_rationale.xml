<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    style="@style/CardView.Light"
    app:cardUseCompatPadding="true"
    app:contentPadding="16dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rationale_title"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rationale_message"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Some message"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/primary_text_light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            style="?buttonBarStyle" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_decline"
                android:text="@string/button_decline_rationale"
                android:textColor="?colorAccent"
                style="?buttonBarNegativeButtonStyle"
                tools:text="Decline" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_grant"
                android:text="@string/button_accept_rationale"
                android:textColor="?colorAccent"
                style="?buttonBarPositiveButtonStyle"
                tools:text="Grant" />
        </LinearLayout >
    </LinearLayout >
</android.support.v7.widget.CardView >
