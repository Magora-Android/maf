<?xml version="1.0" encoding="utf-8"?>

<com.magorasystems.digitalkeyboardwidget.impl.WidgetKeyItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WhiteBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_primary"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_primary_1"
            android:textColor="@color/color_text_primary_1"
            style="@style/TextOne"
            tools:text="0" />

        <TextView
            android:id="@+id/text_primary_2"
            android:textColor="@color/color_text_primary_2"
            style="@style/TextTwo"
            tools:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_secondary"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_secondary_1"
            android:textColor="@color/color_text_secondary_1"
            style="@style/TextOne"
            tools:text="ALT 0" />

        <TextView
            android:id="@+id/text_secondary_2"
            android:textColor="@color/color_text_secondary_2"
            style="@style/TextTwo"
            tools:text="abc" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/key_icon"
        android:layout_gravity="center"
        android:importantForAccessibility="no"
        android:tint="@color/color_icon_tint"
        android:visibility="gone" />

</com.magorasystems.digitalkeyboardwidget.impl.WidgetKeyItem>