<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CommonAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthTextView" parent="TextAppearance.AppCompat">

    </style>
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeTransparentDecor" parent="WithoutActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommonButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text_icons</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="CommonButtonRegistration" parent="CommonButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/size_normal</item>
        <item name="android:layout_marginRight">@dimen/size_normal</item>
    </style>

</resources>
